<div>
    <div class = "jumbotron text-center">
        <h3>Welcome to your library portal, <%= current_user.first_name.split.map(&:capitalize).join(' ') %>!</h3>
        <% if @checked_out_book_items.any? %>
        <h7>Your currently checked out books: </h7>
        <table class="table">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Location</th>
                <th scope="col">Due Before</th>
            </tr>
            <% @checked_out_book_items.each do |bi| %>
            <tr>
                <td scope="row"><%= link_to "#{bi.book_item.book.title}", book_item_path(bi) %></td>
                <td><%= "#{bi.book_item.book.author.first_name} #{bi.book_item.book.author.last_name}" %></td>
                <td><%= bi.book_item.location.name %></td>
                <td><%= (bi.book_item.created_at + 21.days).strftime("%m-%d")%></td>
            </tr>
            <% end %>
        </table>
        <% else %>
        <div>
            <p>Your currently dont have any checked out books.</p>
        </div>
        <div>
            <h7>To check out a book, <h7 class="font-weight-bold">Select a Branch</h7> from above.</h7>
        </div>
        <% end %>
    </div>
</div>
